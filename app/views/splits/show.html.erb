<% content_for :title, "Split" %>

<div class="w-full max-w-3xl mx-auto" data-controller="select-split-modal">

  <div class="w-full sticky top-0 bg-gray-900 pt-4 pb-4 z-30">
    <div class="flex items-center gap-3">
      <%= link_to "javascript:history.back()", class: "p-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-md transition-colors" do %>
        <%= icon "arrow_left", css_class: "w-6 h-6 text-gray-600 dark:text-gray-300" %>
      <% end %>
      <h1 class="font-bold text-2xl sm:text-4xl">Split Breakdown</h1>
    </div>
  </div>

  <% if @split.receipt && @split.receipt.attached? %>
    <div class="my-6 p-3 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg">
      <div class="flex flex-col sm:flex-row sm:items-center space-y-2 sm:space-y-0 sm:space-x-2">
        <div class="flex items-center space-x-2">
          <%= icon "document", css_class: "w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0" %>
          <%= link_to @split.receipt.filename, @split.receipt.file, target: "_blank", class: "text-blue-600 dark:text-blue-400 hover:text-blue-500 dark:hover:text-blue-300 underline font-medium text-sm break-all" %>
          <span class="text-blue-700 dark:text-blue-300 text-xs sm:text-sm">(<%= number_to_human_size(@split.receipt.blob.byte_size) %>)</span>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "summary", split: @split %>

  <div class="space-y-6" data-controller="update-summary" data-update-summary-receipt-items-value="<%= @split.receipt.receipt_items.to_json %>">
    <% @split.receipt.receipt_items.each do |receipt_item| %>
      <%= render receipt_item %>
    <% end %>
  </div>

  <div data-select-split-modal-target="modal" class="hidden fixed inset-0 z-[100] flex items-center justify-center">
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" data-action="click->select-split-modal#close"></div>
    <div class="relative bg-white dark:bg-gray-800 rounded-lg shadow-xl p-6 max-w-md w-full mx-4">
      <h2 class="text-xl font-bold mb-4">Split Between How Many People?</h2>
      <select id="people-count" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
        <% (2..10).each do |num| %>
          <option value="<%= num %>"><%= num %> people</option>
        <% end %>
      </select>
      <div class="flex justify-end gap-2 mt-4">
        <button type="button" data-action="click->select-split-modal#close" class="px-4 py-2 text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg cursor-pointer">Cancel</button>
        <button type="button" data-action="click->select-split-modal#confirm" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 cursor-pointer">Confirm</button>
      </div>
    </div>
  </div>
</div>
