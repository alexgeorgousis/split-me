<% content_for :title, "Splits" %>

<div class="w-full max-w-3xl mx-auto">

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 dark:bg-green-900/30 mb-5 text-green-500 dark:text-green-400 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="py-2 px-3 bg-red-50 dark:bg-red-900/30 mb-5 text-red-500 dark:text-red-400 font-medium rounded-md inline-block" id="alert"><%= alert %></p>
  <% end %>

  <div class="w-full flex justify-center">
    <%= form_with model: Split.new, multipart: true, local: true do |form| %>
      <%= form.fields_for :receipt, Receipt.new do |receipt_form| %>
        <%= receipt_form.file_field :file, accept: "image/*,application/pdf", class: "hidden", id: "receipt-upload", onchange: "this.form.submit()" %>
      <% end %>
      <%= form.button type: "button", onclick: "document.getElementById('receipt-upload').click()", class: "p-2 rounded-full bg-green-600 hover:bg-green-500 dark:bg-green-700 dark:hover:bg-green-600 transition cursor-pointer" do %>
        <%= icon "plus", css_class: "w-6 h-6 text-white" %>
      <% end %>
    <% end %>
  </div>

  <div id="splits" class="space-y-4 mt-6">
    <% if @splits.any? %>
      <% @splits.each do |split| %>
        <div class="relative">
          <%= link_to split_path(split), class: "absolute inset-0 z-10" do %>
          <% end %>
          <%= render split %>
          <div class="absolute top-4 right-4 z-20 flex space-x-2">
            <% if split.receipt && split.receipt.attached? %>
              <%= link_to split.receipt.file, target: "_blank", class: "rounded-md px-2 py-1.5 text-white bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 font-medium cursor-pointer text-sm" do %>
                <%= icon "document", css_class: "w-4 h-4" %>
              <% end %>
            <% end %>
            <%= button_to split, method: :delete, class: "rounded-md px-2 py-1.5 text-white bg-red-600 hover:bg-red-500 dark:bg-red-700 dark:hover:bg-red-600 font-medium cursor-pointer text-sm", data: { turbo_confirm: "Are you sure?" } do %>
              <%= icon "bin", css_class: "w-4 h-4" %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10 text-gray-600 dark:text-gray-400">Click the + button to upload a receipt</p>
    <% end %>
  </div>
</div>
