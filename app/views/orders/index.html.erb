<% content_for :title, "Orders" %>

<div class="w-full max-w-3xl mx-auto">
  <div class="flex justify-end mb-4">
    <button data-controller="theme" data-action="click->theme#toggle" class="p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
      <svg data-theme-target="sun" class="hidden w-6 h-6 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
      </svg>
      <svg data-theme-target="moon" class="w-6 h-6 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
      </svg>
    </button>
  </div>

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 dark:bg-green-900/30 mb-5 text-green-500 dark:text-green-400 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <!-- Upload Receipt Button -->
  <div class="w-full">
    <%= form_with model: Order.new, multipart: true, local: true, class: "w-full" do |form| %>
      <%= form.fields_for :receipt, Receipt.new do |receipt_form| %>
        <%= receipt_form.file_field :file, accept: "image/*,application/pdf", class: "hidden", id: "receipt-upload", onchange: "this.form.submit()" %>
      <% end %>
      <%= form.button "Upload Receipt", type: "button", onclick: "document.getElementById('receipt-upload').click()", class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 text-white block font-medium text-center w-full cursor-pointer" %>
    <% end %>
  </div>

  <!-- Orders List -->
  <div id="orders" class="space-y-4 mt-6">
    <% if @orders.any? %>
      <% @orders.each do |order| %>
        <div class="relative">
          <%= link_to order_path(order), class: "absolute inset-0 z-10" do %>
          <% end %>
          <%= render order %>
          <div class="absolute top-4 right-4 z-20 flex space-x-2">
            <%= link_to edit_order_path(order), class: "rounded-md px-2 py-1.5 text-white bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 font-medium cursor-pointer text-sm" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            <% end %>
            <%= button_to order, method: :delete, class: "rounded-md px-2 py-1.5 text-white bg-red-600 hover:bg-red-500 dark:bg-red-700 dark:hover:bg-red-600 font-medium cursor-pointer text-sm", data: { turbo_confirm: "Are you sure?" } do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10 text-gray-600 dark:text-gray-400">No orders found.</p>
    <% end %>
  </div>
</div>
