<% content_for :title, "Review Receipt - Order ##{@order.id}" %>

<div class="md:w-4/5 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Review Receipt Items</h1>
    <%= link_to "Back to Order", @order, class: "px-4 py-2 bg-gray-100 hover:bg-gray-50 rounded-md font-medium" %>
  </div>

  <div class="mb-6 p-4 bg-blue-50 rounded-md">
    <h2 class="font-semibold mb-2">Matching Summary</h2>
    <% summary = @order.matching_summary %>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
      <div>
        <span class="text-gray-600">Total Items:</span>
        <span class="font-medium"><%= summary[:total_items] %></span>
      </div>
      <div>
        <span class="text-gray-600">Matched:</span>
        <span class="font-medium text-green-600"><%= summary[:matched_items] %></span>
      </div>
      <div>
        <span class="text-gray-600">Unmatched:</span>
        <span class="font-medium text-orange-600"><%= summary[:unmatched_items] %></span>
      </div>
      <div>
        <span class="text-gray-600">Coverage:</span>
        <span class="font-medium"><%= summary[:matching_percentage] %>%</span>
      </div>
    </div>

    <div class="mt-4">
      <%= button_to "Auto-Match Ingredients", process_receipt_order_path(@order), method: :post,
            params: { auto_match: true },
            class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-500 text-sm" %>
    </div>
  </div>

  <div class="space-y-4">
    <h2 class="font-semibold text-xl">Receipt Items</h2>

    <% @order.receipt_items.includes(:ingredient_matches, :ingredients).each do |receipt_item| %>
      <div class="border rounded-md p-4 <%= receipt_item.ingredient_matches.any? ? 'border-green-200 bg-green-50' : 'border-orange-200 bg-orange-50' %>">
        <div class="flex justify-between items-start">
          <div class="flex-1">
            <h3 class="font-medium text-lg"><%= receipt_item.name %></h3>
            <div class="text-sm text-gray-600 mt-1">
              <span>Quantity: <%= receipt_item.quantity %></span>
              <span class="mx-2">•</span>
              <span>Price: £<%= receipt_item.price %></span>
              <span class="mx-2">•</span>
              <span>Unit Price: £<%= (receipt_item.price / receipt_item.quantity).round(2) %></span>
            </div>
          </div>

          <div class="ml-4">
            <% if receipt_item.ingredient_matches.any? %>
              <div class="text-green-600 text-sm">
                <span class="font-medium">✓ Matched to:</span>
                <% receipt_item.ingredient_matches.each do |match| %>
                  <div class="mt-1">
                    <%= link_to match.ingredient.name, ingredient_path(match.ingredient),
                          class: "text-blue-600 hover:text-blue-500 underline" %>
                    <span class="text-gray-500">(confidence: <%= (match.confidence * 100).round(1) %>%)</span>
                  </div>
                <% end %>
              </div>
            <% else %>
              <span class="text-orange-600 text-sm">⚠ No matches found</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-8 p-4 bg-gray-50 rounded-md">
    <h3 class="font-semibold mb-2">Receipt Total</h3>
    <p class="text-xl font-bold">£<%= @order.receipt_total_from_items %></p>

    <% if @order.meals.any? %>
      <div class="mt-4">
        <%= link_to "View Bill Breakdown", bill_breakdown_order_path(@order),
              class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500" %>
      </div>
    <% else %>
      <p class="mt-2 text-gray-600 text-sm">Add meals to this order to see bill breakdown</p>
    <% end %>
  </div>
</div>