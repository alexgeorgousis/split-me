<% content_for :title, "Bill Breakdown - Order ##{@order.id}" %>

<div class="md:w-4/5 w-full">
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-6 gap-4">
    <h1 class="font-bold text-2xl sm:text-4xl">Bill Breakdown</h1>
    <%= link_to "Back to Order", @order, class: "px-4 py-2 bg-gray-100 hover:bg-gray-50 rounded-md font-medium text-center" %>
  </div>

  <!-- Summary Card -->
  <%= render "bill_summary", order: @order %>

  <!-- Receipt Items -->
  <div class="space-y-6">
    <div class="flex justify-between items-center">
      <h2 class="font-bold text-xl">Receipt Items</h2>
      <button id="update-summary-btn" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md font-medium cursor-pointer" data-controller="update-summary" data-action="click->update-summary#submitUpdates">
        Update Summary
      </button>
    </div>

    <% @order.receipt_items.includes(:ingredient_matches, :ingredients).each do |receipt_item| %>
      <%= render "receipt_items/receipt_item", receipt_item: receipt_item, order: @order %>
    <% end %>
  </div>

  <% if @order.meals.any? %>
    <!-- Meal Breakdown -->
    <div class="space-y-6 mt-8">
      <h2 class="font-bold text-xl">Meal Costs</h2>

      <% split_summary = @order.split_summary %>
      <% split_summary[:meal_costs].each do |meal_id, meal_data| %>
        <% meal = meal_data[:meal] %>
        <% cost = meal_data[:cost] %>
        <% breakdown = meal_data[:breakdown] %>

        <div class="border rounded-lg p-6 bg-white shadow-sm">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="font-semibold text-lg">
                <%= link_to meal.name, meal_path(meal), class: "text-blue-600 hover:text-blue-500" %>
              </h3>
              <p class="text-2xl font-bold text-green-600">£<%= cost %></p>
            </div>
          </div>

          <% if breakdown.any? %>
            <div class="mt-4">
              <h4 class="font-medium mb-2">Ingredient Breakdown:</h4>
              <div class="space-y-2">
                <% breakdown.each do |ingredient_name, details| %>
                  <div class="flex justify-between items-center py-2 px-3 bg-gray-50 rounded">
                    <div class="flex-1">
                      <span class="font-medium"><%= ingredient_name %></span>
                    </div>
                    <div class="text-right">
                      <% if details[:matched_item] %>
                        <div class="text-sm text-gray-600">
                          Matched to: <%= details[:matched_item] %>
                        </div>
                        <div class="font-medium">£<%= details[:total_cost] %></div>
                      <% else %>
                        <div class="text-orange-600 text-sm">No match found</div>
                        <div class="font-medium">£0.00</div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% else %>
            <p class="text-gray-500 italic">No ingredients in this meal</p>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
