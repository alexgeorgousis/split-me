<% content_for :title, "Favourites" %>

<div class="w-full max-w-3xl mx-auto">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 dark:bg-green-900/30 mb-5 text-green-500 dark:text-green-400 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="w-full flex justify-center">
    <%= link_to new_favourite_path, class: "p-2 rounded-full bg-green-600 hover:bg-green-500 dark:bg-green-700 dark:hover:bg-green-600 transition cursor-pointer" do %>
      <%= icon "plus", css_class: "w-6 h-6 text-white" %>
    <% end %>
  </div>

  <div id="favourites" class="space-y-4 mt-6">
    <% if @favourites.any? %>
      <% @favourites.each do |favourite| %>
        <div class="relative">
          <%= render favourite %>
          <div class="absolute top-1/2 -translate-y-1/2 right-4 z-20 flex space-x-2">
            <%= link_to edit_favourite_path(favourite), class: "rounded-md px-2 py-1.5 text-white bg-blue-600 hover:bg-blue-500 dark:bg-blue-700 dark:hover:bg-blue-600 font-medium cursor-pointer text-sm" do %>
              <%= icon "pencil", css_class: "w-4 h-4" %>
            <% end %>
            <%= button_to favourite, method: :delete, class: "rounded-md px-2 py-1.5 text-white bg-red-600 hover:bg-red-500 dark:bg-red-700 dark:hover:bg-red-600 font-medium cursor-pointer text-sm", data: { turbo_confirm: "Are you sure?" } do %>
              <%= icon "bin", css_class: "w-4 h-4" %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10 text-gray-600 dark:text-gray-400">No favourites found.</p>
    <% end %>
  </div>
</div>
