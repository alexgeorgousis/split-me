<% content_for :title, "Showing favourite" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Showing favourite</h1>

  <%= render @favourite %>

  <%= link_to "Edit this favourite", edit_favourite_path(@favourite), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-700 hover:bg-gray-600 inline-block font-medium" %>
  <%= link_to "Back to favourites", favourites_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-700 hover:bg-gray-600 inline-block font-medium" %>
  <%= button_to "Destroy this favourite", @favourite, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
