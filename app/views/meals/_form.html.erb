<%= form_with(model: meal, class: "contents", data: { controller: "meal-form" }) do |form| %>
  <% if meal.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

      <ul class="list-disc ml-6">
        <% meal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": meal.errors[:name].none?, "border-red-400 focus:outline-red-600": meal.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <div class="flex justify-between items-center mb-2">
      <%= form.label :ingredients, class: "block font-medium" %>
      <%= link_to "Manage Ingredients", ingredients_path,
            class: "text-sm text-blue-600 hover:text-blue-500 underline",
            target: "_blank" %>
    </div>

    <% if Ingredient.none? %>
      <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-md mb-3">
        <p class="text-yellow-800 text-sm">
          No ingredients found.
          <%= link_to "Create some ingredients first", new_ingredient_path,
                class: "font-medium underline", target: "_blank" %>
          to add them to your meals.
        </p>
      </div>
    <% end %>

    <div id="meal-ingredients" class="space-y-3" data-meal-form-target="ingredientsContainer">
      <%= form.fields_for :meal_ingredients do |ingredient_form| %>
        <div class="ingredient-row flex items-center space-x-3 p-3 border rounded-md" data-persisted="true">
          <%= ingredient_form.collection_select :ingredient_id, Ingredient.all, :id, :name,
                { prompt: "Select ingredient" },
                { class: "flex-1 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
          <%= ingredient_form.hidden_field :_destroy %>
          <button type="button" class="remove-ingredient text-red-600 hover:text-red-800">
            ✕
          </button>
        </div>
      <% end %>

      <!-- Hidden template for new ingredients -->
      <div class="ingredient-row ingredient-template flex items-center space-x-3 p-3 border rounded-md" style="display: none;" data-meal-form-target="template">
        <%= select_tag "meal[meal_ingredients_attributes][new_ingredient][ingredient_id]",
              options_from_collection_for_select(Ingredient.all, :id, :name),
              { prompt: "Select ingredient",
                class: "flex-1 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
        <%= hidden_field_tag "meal[meal_ingredients_attributes][new_ingredient][_destroy]", "false" %>
        <button type="button" class="remove-ingredient text-red-600 hover:text-red-800">
          ✕
        </button>
      </div>
    </div>

    <div class="mt-3 space-x-2">
      <button type="button" data-action="click->meal-form#addIngredient" class="px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-500 cursor-pointer">
        Add Ingredient
      </button>
      <%= link_to "Create New Ingredient", new_ingredient_path,
            class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-500",
            target: "_blank" %>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
