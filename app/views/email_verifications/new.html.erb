<div class="mx-auto md:w-2/3 w-full">
  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-900/30 mb-5 text-red-400 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% end %>

  <% if notice = flash[:notice] %>
    <p class="py-2 px-3 bg-green-900/20 mb-5 text-green-400 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl mb-4">Check your email</h1>

  <p class="text-gray-300 mb-6">
    We've sent a verification link to <strong><%= @user.email_address %></strong>.
    Click the link in the email to verify your account and get started.
  </p>

  <p class="text-gray-400 text-sm mb-6">
    Didn't receive the email? Check your spam folder or click the button below to resend.
  </p>

  <%= form_with url: email_verifications_path, method: :post, class: "contents" do |form| %>
    <%= form.submit "Resend verification email", class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  <% end %>

  <div class="mt-6 text-sm text-gray-400">
    Already verified? <%= link_to "Sign in", new_session_path, class: "text-gray-400 underline hover:no-underline" %>
  </div>
</div>
