<div
  data-controller="receipt-item"
  data-receipt-item-selected-value="<%= receipt_item.selected? %>"
  data-receipt-item-split-mode-value="<%= receipt_item.split_mode %>"
  data-receipt-item-price-value="<%= receipt_item.price %>"
  data-receipt-item-selected-receipt-item-class="border-blue-400 dark:border-blue-600 bg-blue-50 dark:bg-blue-900/20"
  data-receipt-item-unselected-receipt-item-class="border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-800"
  data-receipt-item-common-selected-button-class="text-white"
  data-receipt-item-selected-mine-button-class="border-green-400 bg-green-50 dark:bg-green-900/20"
  data-receipt-item-selected-shared-button-class="border-yellow-400 border-b-0 bg-yellow-50 dark:bg-yellow-900/20"
  data-receipt-item-selected-remove-button-class="border-red-600 bg-red-50 dark:bg-red-900/20"
  data-receipt-item-common-unselected-button-class="border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300"
  data-receipt-item-unselected-mine-button-class="hover:border-green-600 hover:bg-green-50 dark:hover:bg-green-900/20"
  data-receipt-item-unselected-shared-button-class="hover:border-yellow-600 hover:border-b-0 border-b-0 hover:bg-yellow-50 dark:hover:bg-yellow-900/20"
  data-receipt-item-unselected-remove-button-class="hover:border-red-400 hover:bg-red-50 dark:hover:bg-red-900/20"
  class="border rounded-md overflow-hidden transition-all hover:shadow-md">

  <!-- Main Receipt Item -->
  <button class="w-full text-left p-4 cursor-pointer relative" data-action="click->receipt-item#toggleSelected">
    <div class="absolute top-4 right-4 z-20 rounded-full border-2 border-red-600 p-1" onclick="event.stopPropagation()" data-action="click->receipt-item#setSplitMode" data-receipt-item-split-mode-param="remove">
      <svg class="w-6 h-6 text-red-600 hover:text-red-500 dark:text-red-700 dark:hover:text-red-600 cursor-pointer" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
    </div>
    <div class="flex justify-between items-start pr-12">
      <div class="flex items-start space-x-3">
        <div class="flex-1">
          <h3 class="font-medium text-lg"><%= receipt_item.name %></h3>
          <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            <span>Price: £<%= sprintf("%.2f", receipt_item.price) %></span>
          </div>
        </div>
      </div>

      <div class="ml-4">
        <% if receipt_item.ingredient_matches.any? %>
          <div class="text-green-600 dark:text-green-400 text-sm">
            <span class="font-medium">✓ Matched to:</span>
            <% receipt_item.ingredient_matches.each do |match| %>
              <div class="mt-1">
                <span class="text-blue-600 dark:text-blue-400"><%= match.ingredient.name %></span>
                <span class="text-gray-500 dark:text-gray-400">(confidence: <%= (match.confidence * 100).round(1) %>%)</span>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </button>

  <!-- Split Mode Panel -->
  <div
    data-receipt-item-target="splitModePanel"
    class="border-t border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 px-4 py-3">
    <div class="flex items-center justify-between mb-2">
      <span
        data-receipt-item-target="yourShare"
        class="text-xs text-gray-500 dark:text-gray-400">Your share: £<%= receipt_item.my_share_amount %>
    </span>
    </div>

    <div class="flex flex-row space-x-2">
      <button
        data-receipt-item-target="button"
        data-action="click->receipt-item#setSplitMode"
        data-receipt-item-split-mode-param="mine"
        class="flex-1 group relative overflow-hidden rounded-lg border-2 transition-all px-3 py-4 text-center cursor-pointer">
        <div class="text-sm font-semibold">Mine</div>
      </button>

      <button
        data-receipt-item-target="button"
        data-action="click->receipt-item#setSplitMode"
        data-receipt-item-split-mode-param="shared"
        class="flex-1 group relative overflow-hidden rounded-lg border-2 transition-all px-3 py-4 text-center cursor-pointer">
        <div class="text-sm font-semibold">Shared</div>
        <div class="absolute bottom-0 left-0 w-1/2 h-1 bg-green-400"></div>
        <div class="absolute bottom-0 right-0 w-1/2 h-1 bg-yellow-400"></div>
      </button>

      <button
        data-receipt-item-target="button"
        data-action="click->receipt-item#setSplitMode"
        data-receipt-item-split-mode-param="remove"
        class="flex-1 group relative overflow-hidden rounded-lg border-2 transition-all px-3 py-4 text-center cursor-pointer">
        <div class="text-sm font-semibold">Remove</div>
      </button>
    </div>
  </div>
</div>
