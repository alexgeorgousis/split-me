<% selected_receipt_item_class = "border-blue-400 dark:border-blue-600 bg-blue-50 dark:bg-blue-900/20" %>
<% unselected_receipt_item_class = "border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-800" %>
<div
  id="receipt_item_<%= receipt_item.id %>"
  class="border rounded-md overflow-hidden transition-all hover:shadow-md <%= receipt_item.selected ? selected_receipt_item_class : unselected_receipt_item_class %> ">

  <!-- Main Receipt Item -->
  <%= button_to order_receipt_item_path(receipt_item.receipt.order, receipt_item),
    method: :patch,
    params: { selected: !receipt_item.selected, split_mode: receipt_item.selected? ? 'theirs' : 'mine' },
    form_class: "w-full",
    class: "w-full text-left p-4 cursor-pointer " do %>
    <div class="flex justify-between items-start">
      <div class="flex items-start space-x-3">
        <div class="flex-1">
          <h3 class="font-medium text-lg"><%= receipt_item.name %></h3>
          <div class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            <span>Price: £<%= sprintf("%.2f", receipt_item.price) %></span>
          </div>
        </div>
      </div>

      <div class="ml-4">
        <% if receipt_item.ingredient_matches.any? %>
          <div class="text-green-600 dark:text-green-400 text-sm">
            <span class="font-medium">✓ Matched to:</span>
            <% receipt_item.ingredient_matches.each do |match| %>
              <div class="mt-1">
                <span class="text-blue-600 dark:text-blue-400"><%= match.ingredient.name %></span>
                <span class="text-gray-500 dark:text-gray-400">(confidence: <%= (match.confidence * 100).round(1) %>%)</span>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Split Mode Panel -->
  <div
    class="border-t border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 px-4 py-3 <%= receipt_item.selected? ? 'block' : 'hidden' %>">
    <div class="flex items-center justify-between mb-2">
      <span
        class="text-xs text-gray-500 dark:text-gray-400">Your share: £<%= receipt_item.my_share_amount %>
    </span>
    </div>

    <div class="flex flex-row space-x-2">

      <% common_base_button_class = "w-full group relative overflow-hidden rounded-lg border-2 transition-all px-3 py-4 text-center cursor-pointer" %>
      <% common_selected_button_class = "text-white" %>
      <% common_unselected_button_class = "border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300" %>

      <% selected_mine_button_class = "border-green-400 bg-green-50 dark:bg-green-900/20" %>
      <% unselected_mine_button_class = "hover:border-green-600 hover:bg-green-50 dark:hover:bg-green-900/20" %>
      <%= button_to order_receipt_item_path(receipt_item.receipt.order, receipt_item),
        method: :patch,
        params: { split_mode: "mine" },
        form_class: "flex-1",
        class: "#{ common_base_button_class } #{ receipt_item.split_mode == 'mine' ? common_selected_button_class + ' ' + selected_mine_button_class : common_unselected_button_class + ' ' + unselected_mine_button_class }" do %>
        <div class="text-sm font-semibold">Mine</div>
      <% end %>

      <% selected_shared_button_class = "border-yellow-400 border-b-0 bg-yellow-50 dark:bg-yellow-900/20" %>
      <% unselected_shared_button_class = "hover:border-yellow-600 hover:border-b-0 border-b-0 hover:bg-yellow-50 dark:hover:bg-yellow-900/20" %>
      <%= button_to order_receipt_item_path(receipt_item.receipt.order, receipt_item),
        method: :patch,
        params: { split_mode: "shared" },
        form_class: "flex-1",
        class: "#{ common_base_button_class } #{ receipt_item.split_mode == 'shared' ? common_selected_button_class + ' ' + selected_shared_button_class : common_unselected_button_class + ' ' + unselected_shared_button_class }" do %>
        <div class="text-sm font-semibold">Shared</div>
        <div class="absolute bottom-0 left-0 w-1/2 h-1 bg-green-400"></div>
        <div class="absolute bottom-0 right-0 w-1/2 h-1 bg-yellow-400"></div>
      <% end %>

      <%= button_to order_receipt_item_path(receipt_item.receipt.order, receipt_item),
        method: :delete,
        form_class: "flex-1",
        class: common_base_button_class do %>
        <div class="text-sm font-semibold">Remove</div>
      <% end %>
    </div>
  </div>
</div>
